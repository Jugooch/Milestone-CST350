@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Milestone_CST350</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Milestone_CST350.styles.css" asp-append-version="true" />
</head>
<body class="loginBody">

@model Milestone_CST350.Models.UserModel
<div class="loginContent">
    <div class="row loginHeader">
        <div class="col-md-12">
            <h2>Welcome to</h2>
            <h1>Minesweeper Online</h1>
        </div>
    </div>
    <div class="loginForm">
        <div class="row">
            <div class="col-md-12">
                <h5>Log in with valid credentials below:</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="background-color: white; border-radius: 25px; border: 4px solid black">
                <h5 style="color: red;">Invalid Login Attempt... Please try again</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="LoginAuthenticate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="text-align:left;">
                        <label asp-for="Username" class="control-label">Username:</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="text-align:left;">
                        <label asp-for="Password" class="control-label">Password:</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 1%;">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </form>
                 <form asp-action="SignUp">
                    <div class="form-group">
                        <input type="submit" value="Sign Up!" class="btn btn-light" />
                    </div>
                 </form>
            </div>
        </div>
    </div>
</div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
