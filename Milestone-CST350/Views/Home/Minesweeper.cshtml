@model Milestone_CST350.Models.GridModel
@{
    string buttonSize = "0";
}

<div style="width:100%;" align="center">
    <div class="gameBoard" style="width: 400px;">
        <div style="display:flex; flex-wrap: wrap;">

            @for (int i = 0; i < Model.Buttons.Count(); i++) {
                if(Model.Difficulty == 1){
                    buttonSize = "50";
                    if(i%5 == 0)
                    {
                        <div style="flex-basis:100%; height:auto; margin-top: auto;"></div>
                    }
                }
                else if(Model.Difficulty == 2)
                {
                    buttonSize = "40";
                    if(i%8 == 0)
                    {
                        <div style="flex-basis:100%; height:auto;"></div>
                    }
                }
                else
                {
                    buttonSize = "30";
                    if(i%10 == 0)
                    {
                        <div style="flex-basis:100%; height:auto;"></div>
                    }   
                }
                <form>
                    @if (Model.Buttons.ElementAt(i).Clicked)
                    {
                        <button style="width: 40px; height: 40px; border: 2px solid black; background-color: darkgray;" type="submit" value="@Model.Buttons.ElementAt(i).Id" name="buttonNumber" asp-controller="Home" asp-action="HandleButtonClick" disabled="true">
                        </button>
                    }
                    else
                    {
                        @if (Model.Buttons.ElementAt(i).Flagged)
                        {
                            <button class="gridButton" style="width:40px; height: 40px; border: 2px solid red;" type="submit" value="@Model.Buttons.ElementAt(i).Id" name="button" asp-controller="Home" asp-action="HandleButtonClick">
                            </button>
                        }
                        else
                        {
                            <button style="width: 40px; height: 40px; border: 2px solid black;" type="submit" value="@Model.Buttons.ElementAt(i).Id" name="buttonNumber" asp-controller="Home" asp-action="HandleButtonClick">
                            </button>
                        }
                    }
                </form>
            }

        </div>
    </div>
</div>