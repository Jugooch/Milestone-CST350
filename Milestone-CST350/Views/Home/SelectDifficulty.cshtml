@model Milestone_CST350.Models.GridModel
@{
    ViewData["Title"] = "Select Difficulty";
}
<div style="width: 100%;" align="center">
    <div class="selectDifficulty" style="background-color: white; border: 4px solid black; border-radius: 25px;">
        <h2>Select Difficulty</h2>
        <form asp-action="Minesweeper">
            <div class="form-check form-check-inline">
              <input asp-for="Difficulty" class="form-check-input" type="radio" value=".1">
              <label asp-for="Difficulty" class="form-check-label">Easy</label>
            </div>
            <div class="form-check form-check-inline">
              <input asp-for="Difficulty" class="form-check-input" type="radio" value=".3">
              <label asp-for="Difficulty" class="form-check-label">Medium</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Difficulty" class="form-check-input" type="radio" value=".5">
                <label asp-for="Difficulty" class="form-check-label">Hard</label>
            </div>
            <div class="form-group" style="margin-top: 5px; margin-bottom: 5px;">
                <input type="submit" value="Start Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>